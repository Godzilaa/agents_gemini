  "error_test_scenarios": [
    {
      "test_name": "Invalid vehicle type",
      "payload": {
        "latitude": 19.0750,
        "longitude": 72.8750,
        "vehicle_type": "invalid_vehicle"
      },
      "expected_error": "422 Unprocessable Entity"
    },
    {
      "test_name": "Missing required fields",
      "payload": {
        "latitude": 19.0750
      },
      "expected_error": "422 Unprocessable Entity"
    },
    {
      "test_name": "Invalid coordinate format",
      "payload": {
        "latitude": "invalid",
        "longitude": 72.8750,
        "vehicle_type": "bike"
      },
      "expected_error": "422 Unprocessable Entity"
    },
    {
      "test_name": "Extreme coordinates",
      "payload": {
        "latitude": 999.999,
        "longitude": 999.999,
        "vehicle_type": "car"
      },
      "expected_error": "Should handle gracefully"
    }
  ]
}