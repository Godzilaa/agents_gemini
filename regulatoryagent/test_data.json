  "curl_commands": {
    "regulatory_analysis": "curl -X POST \"http://localhost:8001/regulatory-analysis\" -H \"Content-Type: application/json\" -d '{\"latitude\": 19.0750, \"longitude\": 72.8750, \"vehicle_type\": \"bike\"}'",
    
    "nearby_police": "curl -X GET \"http://localhost:8001/nearby-police?latitude=19.0759&longitude=72.8777&radius=5000\"",
    
    "nearby_toll_booths": "curl -X GET \"http://localhost:8001/nearby-toll-booths?latitude=19.0759&longitude=72.8777&radius=5000\"",
    
    "nearby_parking": "curl -X GET \"http://localhost:8001/nearby-parking?latitude=19.0759&longitude=72.8777&radius=2000\"",
    
    "all_zones": "curl -X GET \"http://localhost:8001/zones\"",
    
    "health_check": "curl -X GET \"http://localhost:8001/health\""
  },

